{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Adulis Docs",
  "colors": {
    "primary": "#525D6A",
    "light": "#6887A9",
    "dark": "#6887A9"
  },
  "icons": {
    "library": "fontawesome"
  },
  "background": {
    "color": {
      "light": "#f7f5f3",
      "dark": "#19202A"
    }
  },
  "logo": {
    "light": "/assets/logo/light.png",
    "dark": "/assets/logo/dark.png"
  },
  "favicon": "/assets/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "pages": [
          "home/overview",
          "home/account",
          "home/products"
        ]
      },
      {
        "tab": "Dora",
        "icon": "folder",
        "groups": [
          {
            "group": "Overview",
            "icon": "play",
            "pages": [
              "dora/overview/getting-started",
              "dora/overview/download",
              "dora/overview/log-in",
              "dora/overview/updates",
              "dora/overview/privacy",
              "dora/overview/changelog"
            ]
          },
          {
            "group": "Explorer",
            "icon": "folder",
            "pages": [
              "dora/explorer/introduction",
              "dora/explorer/navigation",
              "dora/explorer/indexing",
              "dora/explorer/views",
              "dora/explorer/quick-search",
              "dora/explorer/hidden-files",
              "dora/explorer/ignoring-files",
              "dora/explorer/file-options"
            ]
          },
          {
            "group": "Chat",
            "icon": "chat",
            "pages": [
              "dora/chat/introduction",
              "dora/chat/mentions",
              "dora/chat/agent-mode",
              "dora/chat/exports"
            ]
          }
        ]
      },
      {
        "tab": "Godview",
        "icon": "map",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "godview/overview/getting-started",
              "godview/overview/mobile-app"
            ]
          },
          {
            "group": "Map",
            "pages": [
              "godview/map/introduction",
              "godview/map/themes",
              "godview/map/gestures"
            ]
          },
          {
            "group": "Chat",
            "pages": [
              "godview/chat/introduction",
              "godview/chat/locate-me",
              "godview/chat/pointer"
            ]
          }
        ]
      },
      {
        "tab": "Persys",
        "icon": "microchip-ai",
        "pages": [
          "persys/getting-started",
          "persys/set-up",
          "persys/log-in"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "href": "https://blog.adulis.ai",
          "icon": "newspaper"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/adulis-ai",
          "icon": "github"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:contact@adulis.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Account",
      "href": "https://account.adulis.ai/home"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/adulis_ai",
      "github": "https://github.com/adulis-ai"
    }
  }
